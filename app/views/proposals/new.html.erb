<h1 class="text-3xl font-bold mb-4">GrantWriter AI Assistant</h1>

<div class="mb-6">
  <p class="mb-2 text-gray-600">
    Enter your nonprofit's mission and the goal of your grant to generate a first draft of your "Statement of Need".
  </p>

  <span class="text-sm text-gray-500">Or use sample data:</span>

  <%= button_to generate_ideas_proposals_path,
              method: :post,
              form_class: "inline-flex align-middle",
              class: "ml-1 inline-flex items-center justify-center h-8 w-8 rounded-full focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-gray-400 disabled:cursor-not-allowed disabled:opacity-50 group",
              form: { data: { controller: "idea-button", action: "turbo:submit-start->idea-button#start turbo:submit-end->idea-button#end", turbo_stream: true } },
              id: "idea-button",
              data: { "idea-button-target": "button" } do %>

    <span data-idea-button-target="buttonContent" class="text-lg leading-none group-hover:animate-shake">
      ðŸŽ²
    </span>

    <span data-idea-button-target="spinner" class="hidden">
      <svg class="animate-spin h-5 w-5 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </span>
  <% end %>

  <div id="generate_ideas_error" class="text-sm text-red-500 mt-2"></div>
</div>

<hr class="mb-6 border-gray-200">

<%= form_with(model: @proposal, class: "space-y-4", data: { controller: "form-submission", action: "turbo:submit-start->form-submission#start turbo:submit-end->form-submission#end" }) do |form| %>
  <div>
    <%= form.label :mission, class: "block text-sm font-medium text-gray-700" do %>
      Nonprofit Mission <span class="text-red-500">*</span>
    <% end %>

    <%= form.text_area :mission, id: "proposal_mission", rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 disabled:bg-gray-100 placeholder:text-gray-400", placeholder: "e.g., To empower underserved youth through technology education.", data: { "form-submission-target": "missionInput", action: "input->form-submission#validateForm" } %>
  </div>

  <div>
    <%= form.label :goal, class: "block text-sm font-medium text-gray-700" do %>
      Grant Goal <span class="text-red-500">*</span>
    <% end %>

    <%= form.text_area :goal, id: "proposal_goal", rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 disabled:bg-gray-100 placeholder:text-gray-400", placeholder: "e.g., To secure funding for a new coding bootcamp for 100 students.", data: { "form-submission-target": "goalInput", action: "input->form-submission#validateForm" } %>
  </div>

  <div>
    <button type="submit" id="generate-draft-button" disabled class="inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 mt-4 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 cursor-pointer disabled:bg-indigo-300 disabled:cursor-not-allowed" data-form-submission-target="submitButton">
      Generate Draft
    </button>
  </div>
<% end %>
