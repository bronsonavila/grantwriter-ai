<h1 class="text-3xl font-bold mb-4">GrantWriter AI Assistant</h1>
<p class="mb-6 text-gray-600 inline">
  Enter your nonprofit's mission and the goal of your grant to generate a first draft of your "Statement of Need".

  <%= button_to generate_ideas_proposals_path,
              method: :post,
              form_class: "inline-flex align-middle",
              class: "ml-2 inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-100 text-indigo-600 hover:bg-indigo-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 disabled:cursor-not-allowed disabled:opacity-50 relative group disabled:hover:bg-indigo-100",
              form: { data: { controller: "idea-button", action: "turbo:submit-start->idea-button#start turbo:submit-end->idea-button#end" } },
              id: "idea-button",
              data: { "idea-button-target": "button" } do %>

    <span data-idea-button-target="buttonContent">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 translate-x-[1px]" viewBox="0 0 24 24">
        <path fill="currentColor" d="M13 3l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4" />
      </svg>
    </span>

    <span data-idea-button-target="spinner" class="hidden">
      <svg class="animate-spin h-5 w-5 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </span>

    <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 w-max px-2 py-1 bg-gray-700 text-white text-xs rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 group-disabled:opacity-0">
      Or let the AI spark some ideas!
    </span>
  <% end %>
</p>

<div id="generate_ideas_error"></div>

<%= form_with(model: @proposal, class: "space-y-4", data: { controller: "form-submission", action: "turbo:submit-start->form-submission#start turbo:submit-end->form-submission#end" }) do |form| %>
  <div>
    <%= form.label :mission, "Nonprofit Mission", class: "block text-sm font-medium text-gray-700" %>

    <%= form.text_area :mission, id: "proposal_mission", rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 disabled:bg-gray-100", placeholder: "e.g., To empower underserved youth through technology education.", data: { "form-submission-target": "missionInput", action: "input->form-submission#validateForm" } %>
  </div>

  <div>
    <%= form.label :goal, "Grant Goal", class: "block text-sm font-medium text-gray-700" %>

    <%= form.text_area :goal, id: "proposal_goal", rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 disabled:bg-gray-100", placeholder: "e.g., To secure funding for a new coding bootcamp for 100 students.", data: { "form-submission-target": "goalInput", action: "input->form-submission#validateForm" } %>
  </div>

  <div>
    <button type="submit" id="generate-draft-button" disabled class="inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 cursor-pointer disabled:bg-indigo-400 disabled:cursor-not-allowed" data-form-submission-target="submitButton">
      Generate Draft
    </button>
  </div>
<% end %>
